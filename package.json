{
  "name": "mydir",
  "version": "1.1.0",
  "description": "Easily register and recall aliases for commonly used directories.",
  "main": "mydir.js",
  "scripts": {
    "postinstall": "echo $'alias cmydir=\\'function _cmydir(){ cd \"$(mydir $1)\"; }; _cmydir\\'' >> ~/.bashrc",
    "preuninstall": "echo \"$(cat ~/.bashrc | sed /alias\\ cmydir/d)\" > ~/.bashrc",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "bin": {
    "mydir": "mydir.js"
  },
  "author": "Samuel Reid",
  "license": "ISC",
  "dependencies": {
    "mkdirp": "^0.5.1"
  }
}
